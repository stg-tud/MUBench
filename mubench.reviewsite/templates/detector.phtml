                        </a>
                    <?php else: ?>
                        <a href="<?= $pathFor('review', array('experiment_id' => $experiment->id, 'detector_muid' => $detector->muid, 'project_muid' => $project, 'version_muid' => $version, 'misuse_muid' => $misuse->misuse_muid, 'reviewer_name' => $user->name)); ?>" class="<?= $button_classes ?>">review</a>
                    <?php endif; ?>
                </td>
                <td class="<?= $style_classes ?>" style="max-width: 300px;">
                    <?= $misuse->hasReviewed($user) ? $misuse->getReview($user)->comment : "" ?>
                </td>
                <td class="<?= $style_classes ?>">
                    <?php if($misuse->hasConclusiveReviewState()) : ?>
                        <?php if($misuse->misuse_tags): ?>
                            <?php foreach($misuse->misuse_tags as $tag) : ?>
                                <div class="misuse-tag">
                                    <span><?= htmlspecialchars($tag->name) ?></span>
                                </div>
                            <?php endforeach; ?>
                        <?php endif; ?>
                    <?php endif; ?>
                </td>
            </tr>
            <?php
            $new_version = false;
            $new_project = false;
            ?>
        <?php endforeach; ?>
